{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="ftco-blocks-cover-1">
        <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('https://media.istockphoto.com/photos/tartiflette-picture-id511932310')">
            <div class="container">
                <div class="row align-items-center justify-content-center text-center">
                    <div class="col-md-7">
                        <h1 class="mb-3">Retrouvez vos recettes rapidement</h1>
                        <p>Ce site réalisé dans cadre d'un projet de L2 contient des recettes de cuisine</p>
                        {% if app.user %}
                            <h2 style="color: white"> Bienvenue </h2>
                        {% else %}
                            <p><a href="{{ path('login') }}" class="btn btn-primary">Connectez vous ici</a></p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="img-years">
                        <a href="https://www.youtube.com/watch?v=Lrj2Hq7xqQ8">
                        <img src="https://i1.sndcdn.com/avatars-BMyeuSVkJ77EMYpn-GgdPVw-t500x500.jpg" alt="Image" class="img-fluid">
                        </a>
                        <div class="year">
                            <span><span>Produit par<br>Tyfenn ELOY</span></span>
                        </div>
                    </div>

                </div>
                <div class="col-lg-5 ml-auto pl-lg-5 text-center">
                    <h3 class="karaH2 text-center">Bienvenue !</h3>
                    <p class="mb-5 lead">Retrouvez vos recettes, ajoutées par nos professionels sur ce site internet, si vous etes connectés vous pouvez aussi vous inscrire a des cours de cuisine.</p>
                    <p><a href="{{ path('recettes') }}" class="btn btn-primary">Toutes les recettes</a></p>
                    <p><a href="{{ path('cours') }}" class="btn btn-primary">Cours de cuisine</a></p>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row justify-content-center  mb-5">
                <div class="col-md-7 text-center">
                    <hr>
                    <h3 class="karaH2 text-center">Les 3 dernières recettes</h3>
                    <p class="mb-5 lead">Choisisez une de ces recettes, ou cliquez <a href="{{ path('recettes') }}">ici</a> pour voir toutes nos recettes</p>

                    <!--
                    <p class="text-center">
                        <a href="#" class="btn btn-primary custom-prev">Précédt</a>
                        <a href="#" class="btn btn-primary custom-next">Suivant</a>
                    </p>
                    -->
                </div>
            </div>
            <div class="row">
                {% for recette in recettes %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="post-entry-1 h-100">
                            <a href="{{ asset('/recette/'~recette.id) }}">
                                <img src="{{ asset('/images/recette/'~recette.image) }}" alt="{{ recette.image }}" class="img-fluid">
                            </a>
                            <div class="post-entry-1-contents">
                                <h2><a href="{{ asset('/recette/'~recette.id) }}">{{ recette.nom }}</a></h2>
                                {% if recette.temps < 60 %}
                                    <span class="meta d-inline-block mb-3">En {{ recette.temps }} mn
                                {% else %}
                                    <span class="meta d-inline-block mb-3">En {{ (recette.temps/60)|round(1, 'floor') }} h
                                {% endif %}
                                    <span class="mx-2">par</span><a href="#">{{ recette.autheur.alias }}</a></span>
                                <p>{{ recette.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <!--
                <div class="col-12 mt-5 text-center">
                    <span class="p-3">1</span>
                    <a href="#" class="p-3">2</a>
                    <a href="#" class="p-3">3</a>
                    <a href="#" class="p-3">4</a>
                </div>
                -->
            </div>
        </div>
    </div>
{% endblock %}

